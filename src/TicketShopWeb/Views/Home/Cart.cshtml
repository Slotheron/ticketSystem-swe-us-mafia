@using TicketSystemEngine;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model CustomerModel
@{
    ViewData["Title"] = "Cart";
}

<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            background-color: white;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: white;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
            background-color: white;
        }
    </style>
</head>
<body>

    <h2>Cart</h2>

    <table>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Seat#</th>
            <th>Date/Time</th>
            <th>Price</th>
            <th class="text-center">Delete Ticket</th>
        </tr>
        @if (Model.tickets != null)
         {
            @foreach (Ticket ticket in Model.tickets)
             {
            <tr>
                <th>@ticket.EventName</th>
                <th>@ticket.VenueName</th>
                <th>@ticket.SeatID</th>
                <th>@ticket.EventStartDateTime</th>
                <th>@ticket.TicketEventPrice kr</th>
                <td><button type="submit" class="center-block btn btn-danger">Delete</button></td>
            </tr>
             }
         }
        <tr>
            <th colspan="3"><span class="pull-right">Sub Total:</span></th>
            <th></th>
        </tr>
        <tr>
            <th colspan="3"><span class="pull-right">Tax 30%:</span></th>
            <th></th>
        </tr>
        <tr>
            <th colspan="3"><span class="pull-right">Total Price:</span></th>
            <th></th>
        </tr>
        <tr>
            <td><a href="Index" class="btn btn-primary">Continue Shopping</a></td>
            <td colspan="3"><button class="pull-right btn btn-success" onclick="location.href='@Url.Action("OrderAdd", "Home")'"  type="submit">Checkout</button></td>
        </tr>
    </table>
</body>
</html>




