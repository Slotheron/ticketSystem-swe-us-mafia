@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
</head>
<body id="mainbody">
    <div class="wrapper">
        <br />
        <br />
        <br />
        <h2>Customer Login</h2>

        @using (Html.BeginForm())
         {
            <input type="text" placeholder="Enter Username" class="input-username" required><br />
            <input type="password" placeholder="Enter Password" class="input-psw" required><br />
            <br />
            <button type="button" class="btn-forgot">Forgot Password</button>
            <button type="submit" class="btn-login">Log In</button>
            <br />
            <button type="button" class="btn-register" id="Register" onclick="location.href='@Url.Action("Register")'">Create Account</button>
         }
        <br />
        <footer class="mainfoot">
        <p>&copy; @DateTime.Now.Year - TicketShop</p>
        </footer>
    </div>
    
</body>
</html>