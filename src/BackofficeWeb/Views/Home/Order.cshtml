@using TicketSystemEngine;
@model List<Order>
@{
    ViewData["Title"] = "Orders";
}

<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
            background-color: white;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
            background-color: white;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
            background-color: white;
        }
    </style>
</head>
<body>

    <h2>Orders</h2>

    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="QuerySearch" method="post">
                    <div class="form-group" method="post">
                        <label>Search for Orders</label>
                        <input class="form-control" name="query" id="QueryTxt" type = "text" required />
                    </div>
                    
                    <div class="form-group" method="post">                       
                        <input type ="submit" name ="query" value="Search" onclick="location.href='@Url.Action("Order", "Home", new {query = "query"})'" />
                    </div>
                </form>
            </section>
        </div>
    </div>

   


    <table>
        <tr>
            <th>TransactionID</th>
            <th>BuyerLastName</th>
            <th>BuyerFirstName</th>
            <th>BuyerAddress</th>
            <th>BuyerCity</th>
            <th>PaymentStatus</th>
            <th>PaymentReferenceID</th>
            <th>TicketID</th>
            <th>BuyerEmailAddress</th>
       </tr>

        @if (Model != null)
         {
            foreach (Order order in Model)
            {  
                <tr>
                    <td>@order.TransactionID</td>
                    <td>@order.BuyerLastName</td>
                    <td>@order.BuyerFirstName</td>
                    <td>@order.BuyerAddress</td>
                    <td>@order.BuyerCity</td>
                    <td>@order.PaymentStatus</td>
                    <td>@order.PaymentReferenceID</td>
                    <td>@order.TicketIDs</td>
                    <td>@order.BuyerEmailAddress</td>
                </tr>
            }
         }
    </table>
 
</body>
</html>

