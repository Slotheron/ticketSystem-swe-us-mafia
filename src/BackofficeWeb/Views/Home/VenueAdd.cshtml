@using TicketSystemEngine;
@model Venue
@{
    ViewData["Title"] = "View";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="addvenue">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="NameTxt" />
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input class="form-control" id="AddressTxt"/>
                </div>
                
                <div class="form-group">
                    <label>City</label>
                    <input class="form-control" id="CityTxt"/>
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <input class="form-control" id="CountryTxt"/>
                </div>
                <div class="form-group">
                    <button type="button" class="AddVenueBtn" id="AddVenueBtn" name="AddVenueBtn">Add Venue</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        $("#ConfirmBtn").on('click', function (){
            $.ajax({               
                type: "POST",
                url: "http://localhost:51775/venue/",
                data: {
                    VenueName : $("#NameTxt").val(),
                    Address : $("#AddressTxt").val(),
                    City : $("#CityTxt").val(),
                    Country : $("#CountryTxt").val()
                },
                contentType: "application/json"
            });
        });
    </script>
}